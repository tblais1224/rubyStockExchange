<h1>Login</h1>

<%= form_tag '/login' do %>
<% if flash[:error] %>
<div id="error" class="alert alert-danger"><%= flash[:error] %></div>
<% end %>
<%= label_tag :username %>
<%= text_field_tag :username %>
<%= label_tag :password %>
<%= password_field_tag :password %>
<%= submit_tag "Login" %>
<%end%>