<h1>Create An Account</h1>

<%= form_for @user do |f| %>
<% if @user.errors.any? %>
<% @user.errors.full_messages.each do |msg| %>
<div class="alert alert-danger"><%= msg %></div>
<% end %>
<% end %>

<%= f.label :username %><br>
<%= f.text_field(:username, {:class => 'form-control'}) %><br>
<%= f.label :password %><br>
<%= f.password_field(:password, {:class => 'form-control'}) %><br>
<%= f.submit %>

<% end %>